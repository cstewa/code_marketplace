    <%= f.label "Company(to be):" %><br/> 
    <em>Optional</em> <br />
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label "About Me:" %><br />
    <%= f.text_area :about %>
  </div>
  <div class="field">
    <%= f.label "Looking for a Developer who:" %><br />
    <%= f.text_area :looking_for %>
  </div>
  <div class="field">
    <%= f.label "Email:" %><br />
    <%= f.text_field :contact_email %>
  </div>
  <div class="field">
    <%= f.label "Cell:" %><br />
    <%= f.number_field :contact_phone %>
  </div>
  <div class="field">
    <%= f.label "Linked In URL:" %><br />
    <%= f.text_field :contact_linked_in %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>

<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :founder %><br />
    <%= text_field_tag :founder_name, @project.founder.name %>
  </div>
  <div class="field">
    <%= f.label "Company (optional):" %><br />
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label "Description of Project:" %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label "Pricing:" %><br />
    <select name="project[price]"> 
      <option <% if @project.price == "Stock Options"%> selected="selected" <% end %> value="Stock Options"> Stock Options </option>
      <option <% if @project.price == "$15-$40/hour"%> 
         selected="selected" <% end %>value="$15-$40/hour"> $15-$40/hour </option>
      <option <% if @project.price == "$40-$60/hour"%> 
         selected="selected" <% end %>
      value="$40-$60/hour"> $40-$60/hour </option>
      <option <% if @project.price == "$60-$90/hour"%> 
         selected="selected" <% end %> value="$60-$90/hour"> $60-$90/hour </option>
      <option <% if @project.price == "$90+/hour"%> 
         selected="selected" <% end %>value="$90+/hour"> $90+/hour </option>
    </select> 
  </div>
  <div class="field">
    <%= f.label "Languages:" %><br />
    <%= text_field_tag :language_name, @project.languages[0].name %>
    <%= text_field_tag :language_name1, @project.languages[1].name %>
    <%= text_field_tag :language_name2, @project.languages[2].name %>
    <%= text_field_tag :language_name3, @project.languages[3].name %>
  </div>
  <div class="field">
    <%= f.label "GitHub Link:" %><br />
    <%= f.text_field :git_link %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

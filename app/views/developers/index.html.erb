<h1>Listing developers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>About</th>
    <th>Looking for</th>
    <th>Price</th>
    <th>Git link</th>
    <th>Contact email</th>
    <th>Contact phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @developers.each do |developer| %>
  <tr>
    <td><%= developer.name %></td>
    <td><%= developer.about %></td>
    <td><%= developer.looking_for %></td>
    <td><%= developer.price %></td>
    <td><%= developer.git_link %></td>
    <td><%= developer.contact_email %></td>
    <td><%= developer.contact_phone %></td>
    <td><%= link_to 'Show', developer %></td>
    <td><%= link_to 'Edit', edit_developer_path(developer) %></td>
    <td><%= link_to 'Destroy', developer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

